<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>
<br><br>

         <%# this is when you want image to be uploaded as normal image %>
  <div>
      <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
